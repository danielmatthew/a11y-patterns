{
  "command": {
    "publish": {
      "ignoreChanges": ["*.md"],
      "message": "chore(release): publish %s"
    },
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true
    }
  },
  "version": "independent",
  "packages": ["components/*"],
  "changelogPreset": {
    "name": "conventionalcommits"
  }
}
