{
  "name": "accessible-web-components",
  "version": "1.0.0-alpha.0",
  "description": "A collection of accessible web components",
  "main": "index.js",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "scripts": {
    "lerna:version": "npx lerna version --conventional-commits --conventional-prerelease=tabs",
    "lerna:publish": "npx lerna publish",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint --ext .js,.html .",
    "format": "npm run format:eslint && npm run format:prettier",
    "format:eslint": "eslint --ext .js,.html . --fix",
    "start": "owc-dev-server --open components/tabs",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielmatthew/accessible-web-components.git"
  },
  "author": "Daniel Matthew",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/danielmatthew/accessible-web-components/issues"
  },
  "homepage": "https://github.com/danielmatthew/accessible-web-components#readme",
  "devDependencies": {
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1",
    "@open-wc/eslint-config": "^2.0.6",
    "@open-wc/prettier-config": "^1.1.0",
    "es-dev-server": "^1.56.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "lit-element": "^2.3.1",
    "prettier": "^2.0.5"
  }
}
